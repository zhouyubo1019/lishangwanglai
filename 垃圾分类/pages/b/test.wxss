.option{
  width: 60%;
  margin:30rpx auto;
  border: 1px solid #ccc;
  line-height: 2.5em;
  font-size: 32rpx;
  text-align: center;
  border-radius: 45rpx;
}
.liuy{
position: absolute;
font-size: 24rpx;
padding:8rpx 30rpx;
text-align: center;
right: 20rpx; 
border-radius: 20rpx;
 background-color:rgba(233, 233, 233, 0.1);
box-shadow: 0px 1px 5px #ddd;
bottom: 300rpx;
}
.title{
  font-size: 64rpx;
  font-weight: 700;
  text-align: center;
}
.indexs{
padding: 50rpx;
font-size: 32rpx;
color:#ddd; 
}
.indexs .index{
color: #000;
}
.outcome{
margin: 0px 30rpx;
margin-top:60rpx;
border-radius: 30rpx;
box-shadow: 1px 2px 5px #888888;
padding-bottom: 40rpx;
}
.title2{
  font-size: 40rpx;
  text-align: center;
  line-height: 1.5em;
}
.score{
  color: #ff1a1a;
  line-height: 1.5em;
  font-size: 44rpx;
  text-align: center;
}
.tables{
  display: table;
  width: 100%;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}
.table_li{
   display: table-row;
}
.table_li:nth-of-type(1) .a{
  opacity: 0;
}
.table_li:nth-of-type(1) {
  font-weight: 600;
}
.table_li:nth-of-type(odd){
  background: #f2f2f2;
  box-sizing: border-box;
}
.a,.b,.c,.d{
  display: table-cell;
  font-size: 28rpx;
  line-height: 2em;
}
.a{
vertical-align: middle;
  
}
.a text{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #d5f58c;
  margin-left: 30rpx;
  text-align: center;
}
.c{
border-left:1px solid #ddd; 
border-right:1px solid #ddd; 
text-align: center;
}
.d{
  text-align: center;
}
.again{
  text-align: center;
  font-size: 32rpx;
}
.again image{
  margin-top:40rpx; 
  width: 62rpx;
  height: 62rpx;
}